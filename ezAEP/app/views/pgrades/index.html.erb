<h1>Pgrades</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Prest</th>
      <th>Pd socre</th>
      <th>Pd review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pgrades.each do |pgrade| %>
      <tr>
        <td><%= pgrade.user_id %></td>
        <td><%= pgrade.prest_id %></td>
        <td><%= pgrade.pd_socre %></td>
        <td><%= pgrade.pd_review %></td>
        <td><%= link_to 'Show', pgrade %></td>
        <td><%= link_to 'Edit', edit_pgrade_path(pgrade) %></td>
        <td><%= link_to 'Destroy', pgrade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pgrade', new_pgrade_path %>
