<%= form_with(model: myprest, local: true) do |form| %>
  <% if myprest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(myprest.errors.count, "error") %> prohibited this myprest from being saved:</h2>

      <ul>
        <% myprest.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Presentor:" %>
    <%= form.select(:user_id, options_for_select(User.all.collect {|u| [ u.first_name, u.id ] })) %>
  </div>

  <div class="field">
    <%= form.label "To Presentation:" %>
    <%= form.select(:prest_id, options_for_select(Prest.where(user_id: current_user.id).collect {|p| [ p.prest_name, p.id ] })) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
