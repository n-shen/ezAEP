<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :evt_name %>
    <%= form.text_field :evt_name %>
  </div>

  <div class="field">
    <%= form.label :evt_host %>
    <%= form.text_field :evt_host %>
  </div>

  <div class="field">
    <%= form.label :evt_sdate %>
    <%= form.date_select :evt_sdate %>
  </div>

  <div class="field">
    <%= form.label :evt_edate %>
    <%= form.date_select :evt_edate %>
  </div>

  <div class="field">
    <%= form.label :evt_desc %>
    <%= form.text_area :evt_desc %>
  </div>

  <div class="field">
    <%= form.radio_button :evt_public, false, autofocus: true %>
    <%= form.label :event, "Private" %><br />

    <%= form.radio_button :evt_public, true %>
    <%= form.label :evt_public, "Public" %><br />
  </div>

  <div class="field">
    <% v = (0...8).map { ('a'..'z').to_a[rand(26)] }.join %>
    <%= form.label :evt_code %>
    <%= form.text_field :evt_code, value: v, :readonly=>true%>
  </div>

  <div class="field">
    <%= form.number_field :user_id, id: :event_user_id, value: current_user.id, :hidden=>true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
