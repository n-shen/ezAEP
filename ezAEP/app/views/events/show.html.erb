<% if current_user.admin || (!current_user.admin && @event.event_visible) %>
<p>
  <strong>Event name:</strong>
  <%= @event.event_name %>
</p>

<p>
  <strong>Event host:</strong>
  <%= @event.event_host %>
</p>

<p>
  <strong>Event start date:</strong>
  <%= @event.event_start_date %>
</p>

<p>
  <strong>Event end date:</strong>
  <%= @event.event_end_date %>
</p>

<p>
  <strong>Event desc:</strong>
  <%= @event.event_desc %>
</p>

<p>
  <strong>Event visible:</strong>
  <%= @event.event_visible %>
</p>

<p>
  <strong>Event code:</strong>
  <%= @event.event_code %>
</p>


<%= link_to 'Edit', edit_event_path(@event), class:"btn btn-secondary" %>
<%= link_to 'Back', events_path, class:"btn btn-secondary" %>

<% else %>
  <p><%= "You are not allowed to view this private event!" %></p>
<% end %>
