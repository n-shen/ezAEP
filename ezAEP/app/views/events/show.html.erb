<br/><br/>
<h2>Presentations List</h2>
<table class="table"> 
  <thead class="table-dark">
    <tr>
      <th>Presentation Name</th>
      <th>Description</th>
      <th>Evaluation Due</th>
      <th>Event Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Prest.all.each do |prest| %>
      <% if prest.event_id == @event.id %>
      <tr>
        <td><%= prest.prest_name %></td>
        <td><%= prest.prest_desc %></td>
        <td><%= prest.prest_evdue %></td>
        <td><%= prest.event_id %></td>
        <td><%= link_to 'Show', prest %></td>
        <td><%= link_to 'Edit', edit_prest_path(prest) %></td>
        <td><%= link_to 'Destroy', prest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>



<br/><br/>
<h2>Enrolled People</h2>
<table class="table">
  <thead class="table-dark">
    <tr>
      <th>Participant ID</th>
      <th>Participant Name</th>
      <th>Joining Date</th>
    </tr>
  </thead>

  <tbody>
    <% Myevent.all.each do |myevent| %>
      <% if current_user == @event.user && myevent.event_id == @event.id %>
        <tr>
          <td><%= myevent.user_id %></td>
          <% @person = User.find(myevent.user_id) %>
          <td><%= @person.first_name %> <%= @person.last_name %></td>
          <td><%= myevent.created_at %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
