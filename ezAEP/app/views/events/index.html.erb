<h1> Events </h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Event Name</th>
      <th>Event Start Date</th>
      <th>Public visible</th>
      <th>Event Access Code</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <% if event.user == current_user || (!current_user.admin && event.event_visible) %>
        <tr>
          <td><%= event.event_name %></td>
          <td><%= event.event_start_date %></td>
          <td><%= event.event_visible %></td>
          <td><%= event.event_code %></td>
          <td><%= event.user_id %></td>
          <td><%= link_to 'Show', event %></td>
          <% if current_user.admin %>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin %>
  <%= link_to 'New Event', new_event_path, class:"btn btn-secondary" %>
<% else %>
  <%= link_to 'Join a private Event', home_joinevents_path, class:"btn btn-primary" %>
<% end %>