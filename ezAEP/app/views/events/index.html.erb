<h1>Events</h1>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th>Event ID</th>
      <th>Event Name</th>
      <th>Host</th>
      <th>Start Date</th>
      <th>Public</th>
      <th>Creator</th>
      <th>Access Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <% if current_user == event.user || !current_user.admin && event.evt_public %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.evt_name %></td>
        <td><%= event.evt_host %></td>
        <td><%= event.evt_sdate %></td>
        <td><%= event.evt_public %></td>
        <% @creator = User.find(event.user_id) %>
        <td><%= @creator.first_name %> <%= @creator.last_name %></td>
        <td><%= event.evt_code %></td>
        <% if current_user.admin %>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin %>
  <%= link_to 'New Event', new_event_path, class: "btn btn-primary" %>
<% end %>
